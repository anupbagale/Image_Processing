        "### RLE for message"
      ],
      "metadata": {
        "id": "6ZMJUuTN_Fn8"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def RLE(img):\n",
        "  i=0\n",
        "  count_str= \" \"\n",
        "  while i<len(img):\n",
        "    count=1\n",
        "    while i+1<len(img) and img[i]==img[i+1]:\n",
        "      count+=1\n",
        "      i+=1\n",
        "    count_str+=str(count)+img[i]\n",
        "    i+=1\n",
        "  return count_str"
      ],
      "metadata": {
        "id": "1zYpDPSZ8nZG"
      },
      "execution_count": 122,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "message=input('Enter a message')\n",
        "encoded_string=RLE(message)\n",
